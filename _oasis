OASISFormat:  0.3
Name:                  osc
Version:               0.1.0
Synopsis:              Open Sound Control library
License:               MIT
Authors:               John Else
Copyrights:            (C) 2014 John Else
BuildTools:            ocamlbuild
Plugins:               META (0.3)

Flag lwt
  Description:         build the Lwt library
  Default:             false

Flag unix
  Description:         build the Unix library
  Default:             false

Library osc
  Path:                lib
  BuildDepends:        ocplib-endian
  Findlibname:         osc
  ByteOpt:             -bin-annot
  NativeOpt:           -bin-annot
  Modules:             Osc, Osc_string, Osc_transport

Library osc_lwt
  Build$:              flag(lwt)
  Path:                lwt
  BuildDepends:        lwt, lwt.unix, osc
  Findlibname:         lwt
  Findlibparent:       osc
  ByteOpt:             -bin-annot
  NativeOpt:           -bin-annot
  Modules:             Osc_lwt

Library osc_unix
  Build$:              flag(unix)
  Path:                unix
  BuildDepends:        osc
  Findlibname:         unix
  Findlibparent:       osc
  ByteOpt:             -bin-annot
  NativeOpt:           -bin-annot
  Modules:             Osc_unix

Executable test_lwt
  Build$:              flag(lwt) && flag(tests)
  Path:                test
  MainIs:              test_lwt.ml
  Install:             false
  BuildDepends:        oUnit, osc, osc.lwt

Test test_lwt
  Command:             $(test_lwt)
  WorkingDirectory:    test

Executable test_main
  Build$:              flag(tests) && flag(unix)
  Path:                test
  MainIs:              test_main.ml
  Install:             false
  BuildDepends:        oUnit, osc, osc.unix, threads

Test test_main
  Command:             $(test_main)
  WorkingDirectory:    test
